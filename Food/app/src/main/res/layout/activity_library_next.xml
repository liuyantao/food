<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_library_next"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.dllo.food.activity.LibraryNextActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/library_query_tv">

        <ImageButton
            android:id="@+id/activity_library_next_ib"
            android:layout_width="@dimen/library_query_tv"
            android:layout_height="@dimen/library_query_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_back_dark_center"/>

        <TextView
            android:id="@+id/activity_library_next_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/activity_library_next_ib"
            android:textColor="@color/text_color_nor"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/library_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/library_query_tv"
        android:background="@color/library_query_tv">

        <Button
            android:id="@+id/activity_library_next_tv"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/library_next_text"
            android:text="营养素排序"
            android:background="@color/library_query_tv"
            android:textColor="@color/text_color_nor"/>

        <ImageButton
            android:id="@+id/activity_library_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_food_arrow_ordering"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/library_line"/>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/activity_library_next_rl"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>-->
    <ListView
    android:id="@+id/activity_library_next_lv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    </ListView>



</LinearLayout>

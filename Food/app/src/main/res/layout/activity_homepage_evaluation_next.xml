        <!--android:layout_toRightOf="@+id/activity_homepage_home_next_imv"-->
        <!--android:text="图片详情"-->
        <!--android:textSize="15dp"-->
        <!--/>-->
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fragment_home_tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/fragment_home_tv"/>

    <WebView
        android:id="@+id/homepage_evaluation_next_wv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/activity_homepage_evaluation_next_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_photo_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="分享"
                android:layout_toRightOf="@+id/activity_homepage_evaluation_next_share"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/activity_homepage_evaluation_next_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_news_keep_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="收藏"
                android:layout_toRightOf="@+id/activity_homepage_evaluation_next_collect"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/library_next_relitive">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_library_next_ci"
            android:layout_width="@dimen/library_next_relitive"
            android:layout_height="@dimen/library_next_relitive"
            android:layout_marginLeft="@dimen/fragment_home_tv"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_toRightOf="@+id/item_library_next_ci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item_library_next_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/liyout_margin_text"
                android:layout_marginLeft="@dimen/text_font_large"
                android:textColor="@color/library_next_text"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/item_library_next_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/library_next_textcolor"
                    android:textSize="@dimen/library_next_text"
                    android:layout_marginLeft="@dimen/text_font_large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千克/100克"
                    android:textColor="@color/library_next_text"
                    android:textSize="@dimen/library_next_text"/>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/library_next_relitive"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/item_library_next_iv"
            android:layout_width="@dimen/library_query_tv_margin"
            android:layout_height="@dimen/library_query_tv_margin"/>
    </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_line"
        android:background="@color/library_line"
        />
</LinearLayout>
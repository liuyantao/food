<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_knowledge_item_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_home_lore_layout"
    android:layout_marginTop="@dimen/fragment_home_tv"
    android:background="@color/library_query_tv"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homepage_knowledge_item_article"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/fragment_home_tv"
            android:layout_weight="3"
            android:textSize="@dimen/fragment_my_tv"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homepage_knowledge_item_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_home_tv"
                android:layout_weight="1"
                android:textColor="@color/fragment_home_tv"
                android:textSize="@dimen/library_query_tv_margin" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fragment_my_btn_register"
                    android:src="@mipmap/ic_watch" />

                <TextView
                    android:id="@+id/homepage_knowledge_item_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_home_first_textview"
                    android:textColor="@color/fragment_home_tv"
                    android:textSize="@dimen/library_query_tv_margin" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/homepage_knowledge_item_eye"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_height"
        android:layout_margin="@dimen/fragment_my_tv"
        android:layout_weight="2"
        android:scaleType="fitXY" />
</LinearLayout>